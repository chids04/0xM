	<body>
        <button id="toggle-nav" class="toggle-button">â˜°</button>
        <div class="sidebar-layout">
            <aside class="sidebar">
              <div class="logo">Program Logo</div>
              <nav>
                <ul>
                  <li><a href="/account">Account</a></li>
                  <li><a href="/personal-milestones">Personal Milestones</a></li>
                  <li><a href="/shared-milestones">Shared Milestones</a></li>
                </ul>

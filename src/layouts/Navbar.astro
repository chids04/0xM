<style>
    .sidebar-layout {
    display: flex;
    height: 100vh;
  }

  .sidebar {
    width: 250px;
    background-color: #f4f4f4;
    padding: 20px;
    border-right: 1px solid #ccc;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    transition: width 0.3s ease, transform 0.3s ease;
    
  }

  .toggle-button {
    display: none;
    position: fixed;
    top: 50%;
    left: 1rem;
    z-index: 1000;
    background: #007bff;
    border: none;
    color: white;
    padding: 0.5rem;
    border-radius: 4px;
    cursor: pointer;
    transition: width 0.3s ease, transform 0.3s ease;

  }

  @media (max-width: 768px) {
    .toggle-button {
      display: block;
      left:0;
    }

    .toggle-button.active {
      transform: translateX(250px);
    }

    .sidebar {
      position: fixed;
      left: -250px;
      height: 100vh;
      z-index: 999;
    }

    .sidebar.active {
      transform: translateX(250px);
    }
    

    .content {
      margin-left: 0;
      width: 100%;
    }

  }

  .sidebar .logo {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
  }

  .sidebar nav ul {
    list-style: none;
    padding: 0;
  }

  .sidebar nav ul li {
    margin-bottom: 10px;
  }

  .sidebar nav ul li a {
    text-decoration: none;
    color: #333;
  }

  .signout-form {
    margin-top: auto;
  }

  .signout-form button{
    width: 100%;
    padding: 10px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;

  }

  .content {
    flex-grow: 1;
    padding: 20px;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButton = document.getElementById('toggle-nav');
    const sidebar = document.querySelector('.sidebar');

    if (toggleButton && sidebar) {
      toggleButton.addEventListener('click', (e) => {
        //e.stopPropagation();
        sidebar.classList.toggle('active');
        toggleButton.classList.toggle('active');
      });

      // Close sidebar when clicking outside
      document.addEventListener('click', (event) => {
        const target = event.target as HTMLElement;
        if (!target.closest('.sidebar') && !target.closest('.toggle-button')) {
          sidebar.classList.remove('active');
          toggleButton.classList.remove('active');
        }
      });
    }
  });
</script>
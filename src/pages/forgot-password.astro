---
import Layout from "../layouts/Layout.astro";
import { ForgotPasswordForm } from "@/components/react/ForgotPasswordForm";
---

<Layout title="Forgot Password">
  <div class="min-h-screen flex items-center justify-center bg-[#0e0e0e]">
    <div class="w-full max-w-md p-8 space-y-8 bg-[#1f1f1f] rounded-lg shadow-lg">
      <h1 class="text-center text-white font-bold mb-2 text-2xl">Forgot Password</h1>
      <p class="text-center text-gray-300 mb-4">
        Enter your email address and we'll send you a password reset link.
      </p>
      <ForgotPasswordForm client:visible />
      <div class="text-center mt-4">
        <a href="/signin" class="text-gray-500 hover:underline">Back to sign in</a>
      </div>
    </div>
  </div>
</Layout>